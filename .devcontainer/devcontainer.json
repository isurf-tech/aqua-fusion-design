{
  "name": "Node.js with NVM",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "extensions": [
    "dbaeumer.vscode-eslint",
    "theme-dracula",
    "SeyyedKhandon.firacode",
    "PKief.material-icon-theme"
  ],
  "postCreateCommand": "nvm install && nvm use",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "forwardPorts": [
    6006
  ],
  "appPort": [
    6006
  ],
  "postStartCommand": "npm install && npm run storybook",
  "workspaceMount": "source=${localWorkspaceFolder}/path/to/your/app,target=/workspace,type=bind,consistency=cached",
  "overrideCommand": false,
  "installsAfter": [
    "ghcr.io/devcontainers-contrib/features/npm-package",
    "ghcr.io/devcontainers-contrib/features/ts-node:1"
  ]
}
